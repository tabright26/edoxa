<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Nullable>Enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <IncludeOpenAPIAnalyzers>true</IncludeOpenAPIAnalyzers>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.11.2" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.25.0" />
    <PackageReference Include="Grpc.Tools" Version="2.26.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.10.3" />
    <PackageReference Include="Sendgrid" Version="9.12.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\eDoxa.Notifications.Infrastructure\eDoxa.Notifications.Infrastructure.csproj" />
    <ProjectReference Include="..\eDoxa.Seedwork.Application\eDoxa.Seedwork.Application.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\data\users.csv" Link="Setup/users.csv" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\eDoxa.Grpc\Protos\cashier_dtos.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\cashier_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\cashier_integration_events.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\cashier_integration_events.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\challenges_dtos.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\challenges_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\challenges_integration_events.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\challenges_integration_events.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\clans_dtos.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\clans_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\clans_integration_events.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\clans_integration_events.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\games_dtos.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\games_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\games_integration_events.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\games_integration_events.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\identity_dtos.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\identity_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\identity_integration_events.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\identity_integration_events.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\payment_dtos.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\payment_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\payment_integration_events.proto" GrpcServices="None" ProtoCompile="false">
      <Link>Protos\payment_integration_events.proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
