<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Nullable>Enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <IncludeOpenAPIAnalyzers>true</IncludeOpenAPIAnalyzers>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.11.1" />
    <PackageReference Include="Grpc.AspNetCore.Server" Version="2.25.0" />
    <PackageReference Include="Grpc.Tools" Version="2.25.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.10.3" />
    <PackageReference Include="Sendgrid" Version="9.12.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\eDoxa.Notifications.Infrastructure\eDoxa.Notifications.Infrastructure.csproj" />
    <ProjectReference Include="..\eDoxa.Seedwork.Application\eDoxa.Seedwork.Application.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\eDoxa.Grpc\Protos\notifications_dtos.proto" GrpcServices="None">
      <Link>Protos\notifications_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\notifications_enums.proto" GrpcServices="None">
      <Link>Protos\notifications_enums.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\notifications_integration_events.proto" GrpcServices="None">
      <Link>Protos\notifications_integration_events.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\notifications_requests.proto" GrpcServices="None">
      <Link>Protos\notifications_requests.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\notifications_responses.proto" GrpcServices="None">
      <Link>Protos\notifications_responses.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\notifications_services.proto" GrpcServices="Server">
      <Link>Protos\notifications_services.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\shared_dtos.proto" GrpcServices="None">
      <Link>Protos\shared_dtos.proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
