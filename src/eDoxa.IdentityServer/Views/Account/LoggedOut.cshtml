@model LoggedOutViewModel

@{
    // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true;
}

<div class="col-sm-6 offset-3">
    <div class="card bg-dark text-white mt-5">
        <h5 class="card-header">You have successfully logged out of eDoxa</h5>
        <div class="card-body m-1">
            <div class="text-center">
                @if (Model.PostLogoutRedirectUri != null)
                {
                    <span>Click <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">here</a> to return to the <span>@Model.ClientName</span> application.</span>
                }
                else
                {
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                }
            </div>
            @if (Model.SignOutIframeUrl != null)
            {
                <iframe width="0" height="0" class="signout d-none" src="@Model.SignOutIframeUrl"></iframe>
            }
        </div>
    </div>
</div>

@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}