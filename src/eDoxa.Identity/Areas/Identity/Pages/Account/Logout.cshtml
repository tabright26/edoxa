@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}
<header>
    <h1>@ViewData["Title"]</h1>
    <p>Are you sure you want to log out from the eDoxa app?</p>
    <form method="post">
        <input asp-for="LogoutId" type="hidden" />
        <button class="btn btn-primary" type="submit">
            Yes
        </button>
        <a asp-action="Index" asp-area="" asp-controller="Home" class="btn btn-default">
            No
        </a>
    </form>
</header>
