@page
@model DetailsModel
@{
    ViewData["Title"] = ManageNavPages.Details;
    ViewData["ActivePage"] = ManageNavPages.Details;
}
<h4 class="mb-4">@ViewData["Title"]</h4>
<partial for="StatusMessage" name="_StatusMessage" />
<div class="row">
    <div class="col-md">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="bg-dark card mb-3 text-white">
                <div class="card-header">
                    PERSONAL INFORMATIONS
                </div>
                <div class="card-body">
                    <dl class="mb-0 row">
                        <dt class="col-4">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-8">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-4 mb-0">@Html.DisplayNameFor(model => model.BirthDate)</dt>
                        <dd class="col-8 mb-0">@Html.DisplayFor(model => model.BirthDate)</dd>
                    </dl>
                </div>
            </div>
            <div class="bg-dark card mb-3 text-white">
                <div class="card-header">
                    E-MAIL
                </div>
                <div class="card-body">
                    <dl class="mb-0 row">
                        <dt class="col-4 mb-0">@Html.DisplayNameFor(model => model.Input.Email)</dt>
                        <dd class="col-8 mb-0">@Html.DisplayFor(model => model.Input.Email)</dd>
                    </dl>
                </div>
            </div>
            <div class="bg-dark card mb-3 text-white">
                <div class="card-header">
                    GAMERTAG
                </div>
                <div class="card-body">
                    <dl class="mb-0 row">
                        <dt class="col-4 mb-0">@Html.DisplayNameFor(model => model.Gamertag)</dt>
                        <dd class="col-8 mb-0">@Html.DisplayFor(model => model.Gamertag)</dd>
                    </dl>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" />
                        <span aria-hidden="true" class="input-group-addon">
                            <i class="fa-check fas text-success"></i>
                        </span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" />
                    <button asp-page-handler="SendVerificationEmail" class="btn btn-link" id="email-verification" type="submit">
                        Send verification email
                    </button>
                }
                <span asp-validation-for="Input.Email" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger">
                </span>
            </div>
            <button class="btn btn-primary" id="update-profile-button" type="submit">
                Save
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
