  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.10.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\eDoxa.Games.LeagueOfLegends\eDoxa.Games.LeagueOfLegends.csproj" />
    <ProjectReference Include="..\eDoxa.Games.Infrastructure\eDoxa.Games.Infrastructure.csproj" />
    <ProjectReference Include="..\eDoxa.Games\eDoxa.Games.csproj" />
    <ProjectReference Include="..\eDoxa.Seedwork.Application\eDoxa.Seedwork.Application.csproj" />
  </ItemGroup>

</Project>
