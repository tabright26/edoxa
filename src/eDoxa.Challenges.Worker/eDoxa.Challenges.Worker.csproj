<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>eDoxa.Challenges.Worker</AssemblyName>
    <RootNamespace>eDoxa.Challenges.Worker</RootNamespace>
    <Nullable>Enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.11.2" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.25.0" />
    <PackageReference Include="Grpc.Net.ClientFactory" Version="2.25.0" />
    <PackageReference Include="Grpc.Tools" Version="2.25.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Hangfire" Version="1.7.8" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.10.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\eDoxa.Seedwork.Application\eDoxa.Seedwork.Application.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\eDoxa.Grpc\Protos\challenges_dtos.proto" GrpcServices="None">
      <Link>Protos\challenges_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\challenges_integration_events.proto" GrpcServices="None">
      <Link>Protos\challenges_integration_events.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\challenges_requests.proto" GrpcServices="None">
      <Link>Protos\challenges_requests.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\challenges_responses.proto" GrpcServices="None">
      <Link>Protos\challenges_responses.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\challenges_services.proto" GrpcServices="Client">
      <Link>Protos\challenges_services.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\games_dtos.proto" GrpcServices="None">
      <Link>Protos\games_dtos.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\games_integration_events.proto" GrpcServices="None">
      <Link>Protos\games_integration_events.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\games_requests.proto" GrpcServices="None">
      <Link>Protos\games_requests.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\games_responses.proto" GrpcServices="None">
      <Link>Protos\games_responses.proto</Link>
    </Protobuf>
    <Protobuf Include="..\eDoxa.Grpc\Protos\games_services.proto" GrpcServices="Client">
      <Link>Protos\games_services.proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
