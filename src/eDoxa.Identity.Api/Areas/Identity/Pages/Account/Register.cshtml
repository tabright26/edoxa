@page
@using eDoxa.Identity.Domain.Services
@using Microsoft.ApplicationInsights.AspNetCore
@model RegisterModel
@inject JavaScriptSnippet JavaScriptSnippet
@inject IRedirectService RedirectService
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>eDoxa</title>
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
        <link href="~/css/bootstrap-custom.css" rel="stylesheet"/>
    </environment>
    <environment exclude="Development">
        <link asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" crossorigin="anonymous" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" rel="stylesheet"/>
        <link href="~/css/bootstrap-custom.min.css" rel="stylesheet"/>
    </environment>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet"/>
    <style>
        .image {
            background-image: url("../../images/panel.jpg");

            /* Full height */
            height: 100%;

            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body class="image">
<div class="container-fluid">
    <a href="@RedirectService.RedirectToWebSpa()" class="btn btn-link mx-2 my-4">
        <i class="fas fa-arrow-circle-left"></i>
        Return to https://edoxa.gg
    </a>
    <a asp-action="Login" asp-area="" asp-controller="Account" class="btn btn-outline-primary mx-2 my-4 float-right">
        <i class="fas fa-sign-in-alt"></i>
        Login
    </a>
    <div class="row">
        <div class="col-md-5 offset-md-6">
            <div class="bg-dark card mb-3 text-white" style="margin-top: 200px; width: 425px;">
                <h3 class="card-header">Create a new account.</h3>
                <div class="card-body pt-2">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="col-form-label col-form-label-sm">
                            </label>
                            <input asp-for="Input.Email" class="form-control form-control-sm"/>
                        </div>
                        <hr class="border-white mb-1"/>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="col-form-label col-form-label-sm">
                            </label>
                            <input asp-for="Input.Password" class="form-control form-control-sm"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="col-form-label col-form-label-sm">
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-sm"/>
                        </div>
                        <hr class="border-white mb-1"/>
                        <p class="mb-1">
                            <small>By clicking this button, you agree to the <a href="@RedirectService.RedirectToWebSpa("/terms-of-services")" target="_blank">terms of services</a>.</small>
                        </p>
                        <button class="btn btn-block btn-primary" type="submit">
                            Register
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
