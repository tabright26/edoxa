@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-5 offset-md-6">
        <div class="bg-dark card mb-3 mt-5 text-white">
            <h3 class="card-header">Create a new account.</h3>
            <div class="card-body pt-2">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="col-form-label col-form-label-sm">
                        </label>
                        <input asp-for="Input.Email" class="form-control form-control-sm"/>
                    </div>
                    <hr class="border-white mb-1"/>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="col-form-label col-form-label-sm">
                        </label>
                        <input asp-for="Input.Password" class="form-control form-control-sm"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="col-form-label col-form-label-sm">
                        </label>
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-sm"/>
                    </div>
                    <hr class="border-white"/>
                    <div class="custom-control custom-checkbox mb-3">
                        <input asp-for="Input.TermsOfService" type="checkbox" class="custom-control-input" id="termsOfService">
                        <label class="custom-control-label" for="termsOfService">I have read and agree to the <a href="#">terms of service</a></label>
                    </div>
                    <hr class="border-white"/>
                    <button class="btn btn-block btn-primary" type="submit">
                        Register
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

