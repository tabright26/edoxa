    <RootNamespace>eDoxa.Arena.Challenges.UnitTests</RootNamespace>
    <LangVersion>8.0</LangVersion>
    <Nullable>disable</Nullable>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Helpers\Stubs\LeagueOfLegends\Matches.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
